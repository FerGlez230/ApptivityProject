doctype
html(lang="es")
	head
		include include/head
	body.registroEvento
		include include/headerEstablecimiento
		.contenedorComun
			h1 Agregar evento
			.contenedorformulario
				form(method="POST" action="" name="Evento" onsubmit='return ValidarEvento()' enctype="multipart/form-data")
					

					input(type='text', placeholder='Nombre del evento' name='NombreEvento' id="NombreEvento" required)
					textarea( rows="10", placeholder="Descripción", name="Descripcion", maxlength="1200" required)
					

					h2 Rango de precio (pesos mexicanos)
					.contenedorvarios
						.parte12
							.izq
								h3 Desde:
								input.lne(type="text", name="PrecioInferior" id="PrecioInferior" required)
						.parte12
							.der
								h3 Hasta:
								input.lne(type="text", name="PrecioSuperior" id="PrecioSuperior" required)
					

					h2 Horario
					
					.muestraHorario
						table
							thead
								tr
									th No.
									th Días
									th Hr Inicio
									th Hr Termino
									th
							tbody

					.contenedorvarios
						.horario
							.ContenedorCalendario
								#calendario
							.parte12
								.izq
									h3 Hora inicio:
									h4 (hrs:min am/pm)
									input(type='time', name='HoraInicio', min="00:00", max="23:59", step="60" id="HoraInicio" required)
							.parte12
								.der
									h3 Hora termino:
									h4 (hrs:min am/pm)
									input(type='time', name='HoraTermino' id="HoraTermino" required)
							
							.agregarPeriodo
								a() Agregar nuevo Horario
					
					h2 Imagen del evento
					
					.prevImage
						.showImg
							img(src="", id='imgExit')

					.ImagenArchivo
						input(type='file', name='fileInput', id="fileInput", value="Examinar" class="inputfile" accept="image/png, .jpeg, .jpg, image/gif" required)
						label(for="fileInput") 
							strong Examinar
								i.fa.fa-upload(aria-hidden='true')
								//-svg(xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17")
									path(d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z")
							span

					.listaCategoria
						ul Categorias
							li
								.subcategoria
									ul
										li 
											input(type='checkbox', name='vehicle', value="Bike")

					.buttonRE
						input(type="submit", value="Agregar evento", id="AgregarEvento", name="AgregarEvento")
		
		include include/footer

		link(rel='stylesheet', href='http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css')
		link(rel='stylesheet', href='css/jquery-ui.multidatespicker.css', type='text/css' )
