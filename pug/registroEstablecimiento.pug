doctype
html(lang="es")
	head
		include include/head
	body(onload="CargarMapaInicial()")
		include include/headerRegistro
		.registroEstablecimiento
			.contenedorComun
				h1 Registra tu establecimiento
				.contenedorformulario
					.vinculo
						h3 Si ya tienes cuenta
							a.simple-ajax-popup-align-top(href="iniciarSesion.html") Inicia sesión

					form(method="POST" action="" id="RegistroEstablecimiento" name="RegistroEstablecimiento")
							
						input(type='text', placeholder='Nombre del establecimiento' name='NombreEstablecimiento' id="NombreEstablecimiento" required)
						input(type='text', placeholder='Teléfono del establecimiento' name='TelefonoEstablecimiento' id="TelefonoEstablecimiento" required)
						textarea(rows="10", placeholder="Descripción", name="Descripcion", id='Descripcion' maxlength="1200" required)

						h2 Operatividad de días y Horario

						.muestraTime
							table(id="tabla")
								thead
									tr
										th No.
										th Días
										th Hr Inicio
										th Hr Termino
										th
								tbody
						input(type="hidden", id="idDias", name="idDias" value=0)
						.contenedorDias
							.contDay
								.contenedor3
									input(type="checkbox", value="Lunes", name="diasSemana", id="lunes")
									label(for="lunes", class="dias") Lunes    
								.contenedor3
									input(type="checkbox", value="Martes", name="diasSemana" id="martes")
									label(for="martes", class="dias") Martes   
								.contenedor3
									input(type="checkbox", value="Miércoles", name="diasSemana", id="miercoles")
									label(for="miercoles", class="dias") Miércoles
							.contDay
								.contenedor4
									input(type="checkbox", value="Jueves", name="diasSemana", id="jueves")
									label(for="jueves", class="dias") Jueves
								.contenedor4
									input(type="checkbox", value="Viernes", name="diasSemana" id="viernes")
									label(for="viernes", class="dias") Viernes
								.contenedor4
									input(type="checkbox", value="Sábado", name="diasSemana", id="sabado")
									label(for="sabado", class="dias") Sábado
								.contenedor4
									input(type="checkbox", value="Domingo", name="diasSemana", id="domingo")
									label(for="domingo", class="dias") Domingo

						.contenedorhorario
							.parte12
								h3 Hora inicio
								h4 ( hrs:min )
								input(type='time', name='HoraInicioE', min="00:00", max="23:59", step="60" id="HoraInicioE" required)
							.parte12
								h3 Hora termino
								h4 ( hrs:min )
								input(type='time', name='HoraTerminoE' id="HoraTerminoE" required)

						.agregarHorario
							a(onclick="") Agregar Horario
						
						h2.mara Ubicación del establecimiento
						 
						#map
						#mapa
						input(type="hidden", id="lat", name="lat")
						input(type="hidden", id="lng", name="lng")
						input(type="text", placeholder="Ingrese dirección (calle, núm, colonia)", id="address")
						
						.opcMap.centro
							.colM25
								a.obtener(name="Mapa" onclick="FindMe()") Obtener mi ubicación actual

							.colM15
								h2 o	
								
							.colM25
								a.traducir(name="MapaDir", id="MapaDir" onclick="FindMeByAddress()") Obtener la dirección ingresada

						h2 Datos del usuario

						.col11
							input(type='text', placeholder='Nombre de usuario' name='Usuario' id='Usuario' required)
						.col12
							input(type='text', placeholder='Apellido paterno' name='ApellidoPaterno' id= 'ApellidoPaterno' required)
						.col12
							input.right(type='text', placeholder='Apellido materno' name='ApellidoMaterno' id= 'ApellidoMaterno')
						
						.col11
							input(type='text', placeholder='Username' name='Username' id='Username' required)
						
						.col11
							input(type='text', placeholder='Correo electrónico' name='CorreoElectronico' id='CorreoElectronico' required)
						
						.col11
							input(type='password', placeholder='Contraseña' name='Contrasena' id='Contrasena')
						
						.col11
							input(type='password', placeholder='Confirmar contraseña' name='ConfirmarContrasena' id='ConfirmarContrasena' required)
						 
						.checka.col11
							input(type="checkbox" name="valida" required)
							label Acepto los
							a(href="#Termino") Términos y Condiciones
						 
						.boton
							input(type='submit', value='REGISTRA TU ESTABLECIMIENTO', name='Registrar')
		include include/footer

		script(type='text/javascript', src='js/mapa.js')
		script(type='text/javascript', src='js/envioDatos.js')
		script(async defer src="https://maps.googleapis.com/maps/api/js?v=3.26&key=AIzaSyD8YRTasiEr2BNxFPo-9TLVVsdxBW-TcQ0&callback=initMap&libraries=places")

